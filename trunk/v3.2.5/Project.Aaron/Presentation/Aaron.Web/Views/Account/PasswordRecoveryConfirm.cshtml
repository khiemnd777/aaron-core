@model Aaron.Web.Models.Accounts.PasswordRecoveryConfirmModel
@{
    Layout = "~/Views/Shared/_Root.Head.cshtml";

    //title
    Html.AddTitleParts("Khôi phục mật khẩu");
}
<div class="page">
    <div class="page-title">
        <h1>Khôi phục mật khẩu</h1>
    </div>
    <div class="clear">
    </div>
    <div class="page-body">
        @if (!String.IsNullOrEmpty(Model.Result))
        {
            <div class="result">
                @Model.Result
            </div>
        }
        @if (!Model.SuccessfullyChanged)
        {
            using (Html.BeginForm())
            {
                
            <fieldset class="form-fields">
                <dl>
                    <dt>
                        @Html.LabelFor(model => model.NewPassword)</dt>
                    <dd>
                        @Html.EditorFor(model => model.NewPassword)
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.ConfirmNewPassword)</dt>
                    <dd>
                        @Html.EditorFor(model => model.ConfirmNewPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                    </dd>
                </dl>
            </fieldset>
            <div class="clear">
            </div>
            <div class="buttons">
                <input type="submit" name="set-password" class="button-1 new-password-button" value="Đổi mật khẩu" />
            </div>
            }
        }
    </div>
</div>
