@model PasswordRecoveryModel
@using Aaron.Web.Models.Accounts;
@{
    Layout = "~/Views/Shared/_Root.Head.cshtml";
    //title
    Html.AddTitleParts("Khôi phục mật khẩu");
}
<div class="page">
    <div class="page-title">
        <h1>Khôi phục mật khẩu</h1>
    </div>
    <div class="clear">
    </div>
    <div class="page-body">
        @Html.ValidationSummary()
        @if (!String.IsNullOrEmpty(Model.Result))
        {
            <div class="result">
                @Model.Result
            </div>
        }
        @using (Html.BeginForm())
        {
            <fieldset class="form-fields">
                <dl>
                    <dt>
                        @Html.LabelFor(model => model.Email)</dt>
                    <dd>
                        @Html.TextBoxFor(model => model.Email, new { @class = "email" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </dd>
                </dl>
            </fieldset>
            <div class="clear">
            </div>
            <div class="buttons">
                <input type="submit" name="send-email" class="t-button" value="Gửi" />
            </div>
        }
    </div>
</div>
